//Endless Play
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int X=sc.nextInt();
		int H=sc.nextInt();
		if(X==4){
		    System.out.println(H);
		}
		else{
		    int res=X-4;
		    int ans=24*res;
		    System.out.println(ans+H);
		}

	}
}
